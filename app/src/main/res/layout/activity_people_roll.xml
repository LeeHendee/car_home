<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/activity_people_roll"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    tools:context="com.example.gtercn.car.activity.PeopleRollActivity">
    <include android:id="@+id/activity_people_include"
        layout="@layout/toolbar_view"/>
    <View
        android:layout_width="match_parent"
        android:layout_height="1dp"
        android:background="@color/listview_line"/>
    <include
        layout="@layout/custom_empty_view"
        android:id="@+id/activity_people_empty_view"
        android:visibility="gone"/>
<ListView
    android:id="@+id/activity_people_recyclerview"
    android:layout_width="match_parent"
    android:layout_height="match_parent"/>
</LinearLayout>
