<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/ui_bg_color">

    <LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
        android:orientation="vertical"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <include layout="@layout/toolbar_view" />

        <EditText
            android:id="@+id/advice_content"
            android:layout_width="match_parent"
            android:layout_height="180dp"
            android:background="@drawable/advice_bg"
            android:layout_margin="10dp"
            android:hint="请写下您宝贵的意见"
            android:padding="5dp"
            android:gravity="top|left"
            android:textColor="@color/edit_txt_color"
            android:textSize="14sp" />

        <EditText
            android:id="@+id/advice_email"
            android:background="@drawable/advice_email_bg"
            style="@style/SingleLineEditText"
            android:hint="电子邮箱(非必填)"
            android:inputType="textEmailAddress"
            />

        <Button
            android:id="@+id/advice_submit"
            style="@style/ButtonSubmitCommit"
            android:text="提交反馈"
            android:textSize="16sp"
            />

    </LinearLayout>

</ScrollView>
