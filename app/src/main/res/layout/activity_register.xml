<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/pager_bg">

    <include layout="@layout/toolbar_view" />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="50dp"
        android:orientation="horizontal"
        android:layout_marginTop="20dp"
        android:background="@color/white">

        <EditText
            android:id="@+id/register_phone_et"
            android:layout_weight="3"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:drawableLeft="@drawable/icon_register_phone"
            android:layout_marginLeft="10dp"
            android:hint="请输入手机号码"
            android:textColorHint="@color/gray3"
            android:drawablePadding="10dp"
            android:textColor="@color/black"
            android:background="@null"
            android:maxLines="1"
            android:gravity="center_vertical"
            android:textSize="14sp"
            android:inputType="phone"
            />

        <TextView
            android:id="@+id/obtain_verification_tv"
            android:layout_weight="2"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:text="获取验证码"
            android:textColor="@color/white"
            android:gravity="center"
            android:background="@color/blue2"
            android:textSize="14sp"
            />

    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="50dp"
        android:orientation="horizontal"
        android:layout_marginTop="2dp"
        android:background="@color/white">

        <EditText
            android:id="@+id/input_verification"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:drawableLeft="@drawable/icon_register_code"
            android:layout_marginLeft="10dp"
            android:hint="请输入验证码"
            android:textColorHint="@color/gray3"
            android:drawablePadding="10dp"
            android:textColor="@color/black"
            android:background="@null"
            android:maxLines="1"
            android:gravity="center_vertical"
            android:imeOptions="actionNext"
            android:textSize="14sp" />
    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="50dp"
        android:orientation="horizontal"
        android:layout_marginTop="2dp"
        android:background="@color/white">

        <EditText
            android:id="@+id/register_pwd_et"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:drawableLeft="@drawable/icon_password_one"
            android:layout_marginLeft="10dp"
            android:hint="请输入密码"
            android:textColorHint="@color/gray3"
            android:drawablePadding="10dp"
            android:textColor="@color/black"
            android:background="@null"
            android:maxLines="1"
            android:gravity="center_vertical"
            android:imeOptions="actionNext"
            android:inputType="textPassword"
            android:textSize="14sp" />
    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="50dp"
        android:orientation="horizontal"
        android:layout_marginTop="2dp"
        android:background="@color/white">

        <EditText
            android:id="@+id/confirm_pwd_et"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:drawableLeft="@drawable/icon_password_two"
            android:layout_marginLeft="10dp"
            android:hint="请确认密码"
            android:textColorHint="@color/gray3"
            android:drawablePadding="10dp"
            android:textColor="@color/black"
            android:background="@null"
            android:maxLines="1"
            android:gravity="center_vertical"
            android:inputType="textPassword"
            android:textSize="14sp" />
    </LinearLayout>

    <Button
        android:id="@+id/register_btn"
        android:layout_width="match_parent"
        android:layout_height="40dp"
        android:text="注册"
        android:textSize="16sp"
        android:textColor="@color/white"
        android:background="@color/blue2"
        android:layout_marginLeft="10dp"
        android:layout_marginRight="10dp"
        android:layout_marginTop="80dp" />

</LinearLayout>