<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="horizontal"
    android:layout_width="match_parent"
    android:layout_height="92dp"
    android:id="@+id/item_my_article">

    <ImageView
        android:id="@+id/my_article_iv"
        android:layout_width="wrap_content"
        android:layout_height="match_parent"
        android:layout_gravity="center_vertical"
        android:padding="10dp"
        android:src="@drawable/btn_address_delete"
        android:visibility="gone" />

    <FrameLayout
        android:layout_width="100dp"
        android:layout_height="72dp"
        android:layout_margin="10dp">

        <TextView
            android:id="@+id/my_article_status"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_gravity="bottom"
            android:text="已下架"
            android:gravity="center"
            android:background="#50000000"
            android:textColor="@color/white"
            android:padding="5dp"
            android:textSize="12sp" />

        <ImageView
            android:id="@+id/my_article_pic"
            android:layout_width="100dp"
            android:layout_height="72dp"
            android:src="@drawable/icon_app"
            android:layout_gravity="center_vertical"
            android:scaleType="fitXY" />
    </FrameLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:layout_gravity="center_vertical"
        android:layout_marginRight="10dp">

        <TextView
            android:id="@+id/my_article_title_tv"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="asdfasdfasdfas  "
            android:textSize="16sp"
            android:maxLines="1"
            android:ellipsize="end" />

        <TextView
            android:id="@+id/my_article_insert_time"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="dsfadasdfasd"
            android:textSize="12sp"
            android:layout_marginTop="10dp" />

        <TextView
            android:id="@+id/my_article_glance_time"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="dsfadasdfasd"
            android:textSize="12sp"
            android:layout_marginTop="2dp" />

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:layout_marginTop="4dp">

            <!--<TextView-->
            <!--android:id="@+id/favourite_price_now"-->
            <!--android:layout_width="wrap_content"-->
            <!--android:layout_height="wrap_content"-->
            <!--android:text="￥0.00"-->
            <!--android:textSize="14sp"-->
            <!--android:textColor="@color/orange_txt" />-->

            <!--<TextView-->
            <!--android:id="@+id/favourite_price_org"-->
            <!--android:layout_width="wrap_content"-->
            <!--android:layout_height="wrap_content"-->
            <!--android:text="0.00"-->
            <!--android:textSize="12sp"-->
            <!--android:layout_marginLeft="5dp"-->
            <!--android:textColor="@color/gray6" />-->
        </LinearLayout>
    </LinearLayout>

    <RelativeLayout
        android:id="@+id/my_article_delete_view"
        android:layout_width="50dp"
        android:layout_height="match_parent"
        android:background="@color/red">

        <TextView
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_centerInParent="true"
            android:text="删除"
            android:textSize="16sp" />
    </RelativeLayout>
</LinearLayout>

