<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="100dp"
    android:background="@drawable/backcolor_callback"
    android:id="@+id/self_travel_item_relativelayout">

    <ImageView
        android:id="@+id/self_travel_item_imageview"
        android:layout_width="110dp"
        android:layout_height="80dp"
        android:layout_centerVertical="true"
        android:layout_margin="10dp"
        android:background="@drawable/icon_default1"
        android:scaleType="fitXY" />

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="80dp"
        android:layout_marginTop="10dp"
        android:layout_marginRight="10dp"
        android:layout_marginBottom="10dp"
        android:layout_toRightOf="@id/self_travel_item_imageview">

        <TextView
            android:id="@+id/self_travel_item_title_textview"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="5dp"
            android:text=""
            android:textColor="@color/black_self_list"
            android:textSize="15sp"
            android:maxLines="2"
            android:ellipsize="end"
            />

        <RelativeLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentBottom="true"
            android:layout_alignParentRight="true"
            android:layout_marginBottom="10dp"
            android:layout_marginRight="10dp"
            android:orientation="horizontal">

            <TextView
                android:id="@+id/self_travel_item_apply_textview"
                android:layout_width="80dp"
                android:layout_height="30dp"
                android:background="@drawable/self_apply_backcolor"
                android:gravity="center"
                android:text="马上报名"
                android:textColor="@color/black_self_list_white" />
            <TextView
                android:visibility="gone"
                android:id="@+id/self_travel_item_cancel_textview"
                android:layout_width="80dp"
                android:layout_height="30dp"
                android:gravity="center"
                android:background="@drawable/self_cancel_backcolor"
                android:text="取消活动"
                android:textColor="@color/black_self_list_white" />
        </RelativeLayout>
    </RelativeLayout>

</RelativeLayout>
