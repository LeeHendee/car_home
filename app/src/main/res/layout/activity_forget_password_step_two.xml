<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:background="@color/ui_bg_color">

    <include layout="@layout/toolbar_view" />

    <View
        android:layout_height="1px"
        android:layout_width="match_parent"
        android:background="@color/listview_line"
        android:layout_marginTop="10dp" />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="40dp"
        android:orientation="horizontal"
        android:background="@color/white">

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="40dp"
            android:layout_marginLeft="10dp"
            android:layout_marginRight="10dp"
            android:text="新  密  码"
            android:gravity="center_vertical"
            android:textSize="14sp"
            android:textColor="@color/text_title_color" />

        <EditText
            android:id="@+id/forget_password_newpassword"
            android:layout_width="wrap_content"
            android:layout_height="40dp"
            android:hint="请输入新密码"
            android:inputType="textPassword"
            android:textSize="14sp"
            android:textColor="@color/text_body_color"
            android:maxLines="1"
            android:background="@null"
            android:gravity="center_vertical"
            android:paddingLeft="5dp" />
    </LinearLayout>

    <View
        android:layout_height="1px"
        android:layout_width="match_parent"
        android:background="@color/listview_line"
        android:layout_marginLeft="10dp" />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="40dp"
        android:orientation="horizontal"
        android:background="@color/white">

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="40dp"
            android:layout_marginLeft="10dp"
            android:layout_marginRight="10dp"
            android:text="确认密码"
            android:gravity="center_vertical" />

        <EditText
            android:id="@+id/forget_password_confirm_newpassword"
            android:layout_width="wrap_content"
            android:layout_height="40dp"
            android:hint="请再次输入新密码"
            android:inputType="textPassword"
            android:textSize="14sp"
            android:textColor="@color/text_body_color"
            android:maxLines="1"
            android:background="@null"
            android:gravity="center_vertical"
            android:paddingLeft="5dp" />
    </LinearLayout>

    <View
        android:layout_height="1px"
        android:layout_width="match_parent"
        android:background="@color/listview_line" />

    <TextView
        android:id="@+id/forget_password_determine_btn"
        android:layout_width="match_parent"
        android:layout_height="40dp"
        android:layout_marginTop="30dp"
        android:layout_marginLeft="10dp"
        android:layout_marginRight="10dp"
        android:text="确定"
        android:textColor="@color/white"
        android:background="@color/blue2"
        android:textSize="16sp"
        android:gravity="center" />
</LinearLayout>
