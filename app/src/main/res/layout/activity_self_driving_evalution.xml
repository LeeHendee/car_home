<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/activity_self_driving_evalution"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    tools:context="com.example.gtercn.car.activity.SelfDrivingIssueActivity">

    <android.support.v7.widget.Toolbar
        android:id="@+id/activity_self_driving_evalution_toolbar"
        android:layout_width="match_parent"
        android:layout_height="@dimen/toobar_height"
        android:background="@color/toolbar_bg"
        android:minHeight="?attr/actionBarSize">

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent">

            <TextView
                android:id="@+id/activity_self_driving_evalution_callback_textview"
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:layout_centerVertical="true"
                android:paddingLeft="10dp"
                android:paddingRight="10dp"
                android:drawableLeft="@drawable/icon_callback_arrow"
                android:drawablePadding="2dp"
                android:gravity="center_vertical"
                android:text="返回"
                android:textColor="@color/text_title_color"
                android:background="@drawable/backcolor_callback"/>

            <TextView
                android:id="@+id/activity_self_driving_evalution_title_textview"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_centerInParent="true"
                android:text="发布"
                android:textColor="@color/text_title_color"
                android:textSize="20sp" />

        </RelativeLayout>
    </android.support.v7.widget.Toolbar>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="45dp"
        android:orientation="horizontal">

        <LinearLayout
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:gravity="center">

            <RelativeLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center">

                <TextView
                    android:id="@+id/activity_self_driving_evalution_nums_textview"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_centerVertical="true"
                    android:text="全部"
                    android:textColor="@color/text_title_color"
                    android:textSize="@dimen/activity_four_title" />

                <TextView
                    android:id="@+id/activity_self_driving_evalution_num_textview"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="2dp"
                    android:layout_toRightOf="@id/activity_self_driving_evalution_nums_textview"
                    android:text="(156)"
                    android:textColor="@color/text_title_color"
                    android:textSize="@dimen/find_promotion_time" />
            </RelativeLayout>
        </LinearLayout>

        <TextView
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:gravity="center"
            android:text="最新" />
    </LinearLayout>

    <ListView
        android:id="@+id/activity_self_driving_evalution_listview"
        android:layout_width="match_parent"
        android:layout_height="match_parent" />
</LinearLayout>
